<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/album_art"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <!-- Song Title -->
    <TextView
        android:id="@+id/widget_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widget_album_art"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Song Title"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/widget_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_song_title"
        android:layout_toEndOf="@id/widget_album_art"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Artist Name"
        android:textColor="#CCCCCC"
        android:textSize="14sp" />

    <!-- Control Buttons Container -->
    <LinearLayout
        android:id="@+id/widget_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_artist_name"
        android:layout_toEndOf="@id/widget_album_art"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Previous Button -->
        <ImageButton
            android:id="@+id/widget_prev_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/previous"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_media_previous"
            android:tint="@android:color/white" />

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/widget_play_pause_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/play_pause"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_media_play"
            android:tint="@android:color/white" />

        <!-- Next Button -->
        <ImageButton
            android:id="@+id/widget_next_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/next"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_media_next"
            android:tint="@android:color/white" />
    </LinearLayout>

</RelativeLayout>

